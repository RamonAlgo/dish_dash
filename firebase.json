{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "firebase_options.dart",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(js|html|css|json|ico|png|jpg|jpeg|gif|ttf|otf|woff|woff2|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  }
}
